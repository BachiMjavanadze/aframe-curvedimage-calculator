h1
  font-size 24px
  text-align center
  margin $layoutSpaceHalf
  text-transform uppercase

a
a:focus
a:visited
  color $colorBlack
  &.button
    color $colorPrimary

a:hover
  color $colorPrimary

.button
button
  padding 8px $layoutSpaceAndHalf
  background-color $colorHighlight
  color $colorPrimary
  font-size 10px
  text-transform uppercase
  text-decoration none
  cursor pointer
  border-radius: 2px;
  &:active
    background-color darken($colorHighlight, 15%)
  @media screen and (min-width: 560px)
    font-size 12px
  &.button-inverse
    background-color $colorPrimary
    color $colorHighlight
    &:active
      background-color darken($colorPrimary, 15%)
